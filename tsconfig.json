{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,

        // TODO: Enable this once we feel we are ready for it. At the moment we don't know React and TypeScript well enough to
        // make it worthwhile.
        "noImplicitAny": false,

        "module": "commonjs",
        "target": "es2016",
        "jsx": "react",
        "types": [
            "node",
            "webpack-env"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
